<%= form_for resource.route_for(current_record) do |f| %>
  <fieldset>
    <% singular_class.columns.each do |column| %>
      <% next if exclusions.include? column.name.to_sym %>
      <%= f.label column.name.to_sym %>
      
      <% case column.type.to_sym 
         when :integer %> 
        <%= f.text_field column.name.to_sym, :class => 'integer' %>
      <% when :date %> 
        <%= f.text_field column.name.to_sym, :placeholder => 'yyyy-mm-dd' %>
      <% when :text %> 
        <%= f.text_area column.name.to_sym %>
      <% when :boolean %> 
        <%= f.check_box column.name.to_sym %>
      <% else %> 
        <%= f.text_field column.name.to_sym %>
      <% end %>
    <% end %>
  </fieldset>

  <fieldset class="buttons">
    <%= f.submit "Save #{singular_class}" %>
  </fieldset>
<% end %>