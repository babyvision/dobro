<%= form_for resource.route_for(current_record) do |f| %>
  <fieldset>
    <% singular_class.column_names.each do |column| %>
      <p>
        <%= f.label column.to_sym %>
        <%= f.text_field column.to_sym %>
      </p>
    <% end %>
  </fieldset>

  <fieldset class="buttons">
    <%= f.submit "Save #{singular_class}" %>
  </fieldset>
<% end %>
