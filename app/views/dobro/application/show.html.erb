<header class="h2">
  <h2><%= current_record.identifier %></h2>

  <nav>
    <ul>
      <li>
        <%= link_to 'Edit', resource.route_for(:edit, current_record), :class => 'edit' %>
      </li>
      <li>
        <%= link_to 'Delete', resource.route_for(:delete, current_record), :class => 'cancel' %>
      </li>
    </ul>
  </nav>
</header>

<%= render 'show' %>
